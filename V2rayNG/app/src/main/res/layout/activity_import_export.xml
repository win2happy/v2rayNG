<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="@string/title_import_export" />
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Export Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_export_backup_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/import_export_backup_desc"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <Button
                        android:id="@+id/btn_export_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/import_export_export_all"
                        android:drawableStart="@drawable/ic_cloud_download_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Colored" />

                    <Button
                        android:id="@+id/btn_export_subscriptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/import_export_export_subscriptions"
                        android:drawableStart="@drawable/ic_subscriptions_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:id="@+id/btn_export_servers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/import_export_export_servers"
                        android:drawableStart="@drawable/ic_server_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:id="@+id/btn_export_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_export_export_settings"
                        android:drawableStart="@drawable/ic_settings_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="16dp" />

                <!-- Import Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_export_restore_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/import_export_restore_desc"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <Button
                        android:id="@+id/btn_import_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/import_export_import_all"
                        android:drawableStart="@drawable/ic_cloud_upload_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Colored" />

                    <Button
                        android:id="@+id/btn_import_subscriptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/import_export_import_subscriptions"
                        android:drawableStart="@drawable/ic_subscriptions_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:id="@+id/btn_import_servers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/import_export_import_servers"
                        android:drawableStart="@drawable/ic_server_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:id="@+id/btn_import_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/import_export_import_settings"
                        android:drawableStart="@drawable/ic_settings_24dp"
                        android:drawablePadding="8dp"
                        style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_waiting"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</FrameLayout>
